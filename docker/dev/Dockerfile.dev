# Build stage
FROM golang:1.22-alpine AS builder

WORKDIR /app

# Install Air for hot reload (using version compatible with Go 1.22)
RUN go install github.com/cosmtrek/air@v1.40.4

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Development stage
FROM golang:1.22-alpine

WORKDIR /app

# Install Air for hot reload (using version compatible with Go 1.22)
RUN go install github.com/cosmtrek/air@v1.40.4

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Expose port
EXPOSE 8080

# Use Air for hot reload
CMD ["air", "-c", ".air.toml"]
